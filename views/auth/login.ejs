<!-- Main Body Start-->
<main class="mainBody displayFlex">
    <div class="container-form">
        <div class="heading">
           <div class="centerMe mt-5">
               <h1>Welcome to WAAWTube</h1>
               
            <%- include('../messages') -%>
             <form method="POST" action="/auth/login" class="p-5">
               
                <div class="form-group">
                    <label for="value">Username or Email</label>
                    <input name="text" type="text" class="form-control" id="" aria-describedby="emailHelp" placeholder="name@gmail.com" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input name="password" type="password" class="form-control" id="password" placeholder="6+ characters" required>
                </div>
               
                <button type="submit" class="btn btn-primary">Login</button>
    
                <div class="form-group form-check mt-3">
                    <p>Don't have an account? <a href="/auth/register">Register Now</a></p>
                </div>
                
              </form>
           </div>
        </div>
    </div>
</main>
    <%- include('../partials/foot')-%>